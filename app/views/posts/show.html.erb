  <div class="card card-blog card-atv">
  	<div class="card-image">
  			<div class="atvImg">
          <%= image_tag @post.picture %>
  			</div>
  		</a>
  	</div>

  	<div class="card-content">
  		<h4 class="card-title"> <%= @post.description %> </h4>
  		<div class="footer">
  			<div class="author">
          <%= link_to @post.user do %>
              <%= image_tag render_user_avatar(@post.user, 70),  class: 'avatar', style: 'width:70px; height:70px;'%>
              <%= @post.user.display_name %>
          <% end %>
  			</div>

        <a class="btn btn-primary btn-simple pull-right" rel="tooltip" title="Reply to Comment">
          <i class="material-icons">chat_bubble</i> <%= @post.comments.count %>
        </a>

        <%= render 'like_button', post: @post%>

  		</div>
  	</div>
  </div>

  <div>
    <%= render 'delete_button', post: @post %>
    <div class="row">
      <div class="pull-right">
        <%= social_share_button_tag("宁波市质监局''有质青年''志愿者活动", :allow_sites => %w(douban weibo), :image => @post.picture.url , desc: '质监局的活动') %>
        <div class="social-share-button">
          <a type="button" class="ssb-icon ssb-wechat" data-toggle="modal" data-target="#share-to-wechat"> </a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%= render 'comment_input_area', comment: @comment, post: @post %>

  <div class="container">
    <% @comments.each do |comment| %>
    <%= render 'post_comment', comment: comment %>
    <% end %>
  </div>



  <!-- Modal -->
  <div class="modal fade" id="share-to-wechat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
