
  <div class="card card-blog card-atv">
  	<div class="card-image">
  		<a href="#pablo">
  			<div class="atvImg">
          <%= image_tag @post.picture %>
  			</div>
  		</a>
  	</div>

  	<div class="card-content">
  		<h4 class="card-title"> <%= @post.description %> </h4>
  		<div class="footer">
  			<div class="author">
          <%= link_to @post.user do %>
              <%= image_tag @post.user.account_avatar, class: 'avatar' %>
              <span><%= @post.user.account_name %></span>
          <% end %>
  			</div>
  		</div>
  	</div>
  </div>

<%= render 'like_button', post: @post%>
<br>
<div class="row">
  <%= @post.likers.count %> 人喜欢

    <% if post_deletable?(@post, current_user) %>
    <%= link_to post_path(@post), method: :delete, class:'btn btn-danger btn-xs' do %>
    <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
    <% end %>

</div>
<hr>

<i class="fa fa-comment-o" aria-hidden="true"><%= @post.comments.count %>条评论</i>
<%= simple_form_for @comment, url: post_comments_path(@post), method: :post do |f| %>
    <div class="group">
      <%= f.input :content %>
    </div>

    <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>

<div class="">
  <% @comments.each do |comment| %>
  <%= render 'post_comment', comment: comment %>
  <% end %>
</div>
