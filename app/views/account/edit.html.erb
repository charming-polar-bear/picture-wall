<div class="team-4 section-image" style="background-image: url('https://ws3.sinaimg.cn/large/006tKfTcgy1fgf2rkqgicj30ng0ng0ww.jpg')">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="card card-profile">
            <div class="card-avatar">
              <a href="#pablo">
                <%= image_tag @user.account_avatar %>
              </a>
            </div>
            <div class="card-content">
              <h4 class="card-title"><%= @user.account_name %></h4>
              <h6 class="category text-muted"><%= @user.signature %></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <%= simple_form_for current_user, url: account_path(current_user) do |f| %>
    <div class="fileinput fileinput-new text-center" data-provides="fileinput">
      <div class="fileinput-new img-raised">
        <% if current_user.account_avatar.present? %>
        <%= image_tag current_user.account_avatar%>
        <% else %>
        <img src="https://ws1.sinaimg.cn/large/006tNc79gy1fi7mkkxvjfj305k05kjrl.jpg" alt="...">
        <% end %>
      </div>
      <div class="fileinput-preview fileinput-exists img-raised"></div>
      <div>
        <%= f.input :account_avatar, as: :file, label: '上传头像' %>
      </div>

    <%= f.input :account_name, label: false, placeholder: "我的昵称", style: 'margin-top: 5px;' %>
    <%= f.input :signature, label: false, placeholder: "我的个性签名", style: 'margin-top: 5px;' %>

    <button type="submit" name="commit" value="Submit" disable_with="Submiting..." data-disable-with="Submit" class='btn btn-danger btn-round'>
      <i class="fa fa-paper-plane"></i> 修改
    </button>
  <% end %>
  </div>
</div>


  <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-info btn-sm pull-right' do%>
    <i class="fa fa-sign-out"></i>  退出登录
  <% end %>





