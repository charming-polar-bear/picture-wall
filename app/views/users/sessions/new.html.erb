                </a>
                <a href="#pablo" class="btn btn-simple btn-just-icon">
                  <i class="fa fa-github"></i>
                </a>
              </div> -->
            </div>
            <p class="text-divider">邮箱登录</p>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="content">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">email</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">E-mail</label>
                    <%= f.text_field :email, type: :email, required: true, autofocus: true, class: "form-control" %>
                  </div>
                </div>

                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">登录密码</label>
                    <%= f.text_field :password, type: :password, required: true, class: "form-control" %>
                  </div>
                </div>

              </div>
              <div class="footer text-center">
                <%= f.submit "登  录", data: { disable_with: "登录中..." }, class: "btn btn-round btn-info"%>
                <%= link_to '新用户', new_user_registration_path, class: 'btn btn-round btn-default' %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
